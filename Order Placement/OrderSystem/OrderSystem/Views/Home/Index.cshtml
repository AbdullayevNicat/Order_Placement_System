@{
    ViewData["Title"] = "Home Page";
}
@model List<Order>
<header>
    <h2>Orders</h2>
    <div>
        <a asp-controller="Home" asp-action="Create" class="btn btn-success">Create Order</a>
    </div>
</header>
<main>
    <div class="alert-danger">
        @ViewBag.Error
    </div>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Order Name</th>
                <th scope="col">Order Type</th>
                <th scope="col">Customer</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Address Moving From</th>
                <th scope="col">Address Moving To</th>
                <th scope="col">Note</th>
                <th scope="col">Order Date</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count != 0)
            {
                foreach (Order item in Model)
                {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.OrderType</td>
                    <td>@item.Customer.Name</td>
                    <td>@item.Customer.Email</td>
                    <td>@item.Customer.PhoneNumber</td>
                    <td>@item.Customer.AddressMovingFrom</td>
                    <td>@item.Customer.AddressMovingTo</td>
                    <td>@item.Customer.Note</td>
                    <td>@item.Customer.OrderDate.ToString("yyyy-mm-dd")</td>
                    <td>
                        <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </td>
                    <td>
                        <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
    
</main>
